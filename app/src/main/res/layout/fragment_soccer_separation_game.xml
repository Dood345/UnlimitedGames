<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/separation_game_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- QUESTION PROGRESS -->
            <TextView
                android:id="@+id/tv_question_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1 of 10"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:textColor="@color/separation_game_text"
                android:visibility="gone" />

            <!-- PLAYER 1 -->
            <TextView
                android:id="@+id/tv_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/separation_game_text"
                android:paddingBottom="24dp"
                android:visibility="gone" />

            <!-- RESULT TEXT (for feedback and final score) -->
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/separation_game_text"
                android:paddingBottom="16dp"
                android:visibility="gone" />

            <!-- RESTART BUTTON (only shown at end) -->
            <Button
                android:id="@+id/btn_restart"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Restart Game"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/separation_game_button"
                android:textColor="@color/separation_game_text"
                android:visibility="gone" />

            <!-- ANSWER BUTTONS -->
            <LinearLayout
                android:id="@+id/options_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_choice_1"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Option 1"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/separation_game_button"
                    android:textColor="@color/separation_game_text"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_choice_2"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Option 2"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/separation_game_button"
                    android:textColor="@color/separation_game_text"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_choice_3"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Option 3"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/separation_game_button"
                    android:textColor="@color/separation_game_text"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_choice_4"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Option 4"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/separation_game_button"
                    android:textColor="@color/separation_game_text"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- PLAYER 2 -->
            <TextView
                android:id="@+id/tv_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/separation_game_text"
                android:paddingTop="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Loading indicator (centered on screen) -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge" />

</RelativeLayout>