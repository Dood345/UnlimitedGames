<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudoku"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranked Games"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_easy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Easy (1.0x)"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_medium"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Medium (1.5x)"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_hard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hard (2.0x)"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_expert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Expert (3.0x)"
        android:textSize="18sp"
        android:layout_marginBottom="32dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_free_play"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Free Play"
        android:textSize="18sp"
        style="?attr/materialButtonOutlinedStyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Color"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <View
            android:id="@+id/color_black"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/color_selector_black" />

        <View
            android:id="@+id/color_blue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/color_selector_blue" />

        <View
            android:id="@+id/color_red"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/color_selector_red" />

        <View
            android:id="@+id/color_green"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/color_selector_green" />

    </LinearLayout>

</LinearLayout>