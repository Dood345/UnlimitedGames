<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleGames" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Delete dialogue theming -->
    <style name="DeleteDialogueTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.ButtonDelete</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.ButtonCancel</item>
    </style>
    <style name="AlertDialog.ButtonDelete" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="AlertDialog.ButtonCancel" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/generalText</item>
    </style>

    <!-- Sudoku dialogue theming -->
    <style name="SudokuDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.ButtonAwesome</item>
    </style>
    <style name="AlertDialog.ButtonAwesome" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/sudoku_board_fixed_text_color</item>
    </style>

    <!-- General dialogue theming -->
    <style name="DialogueTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.ButtonPos</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.ButtonNeg</item>
    </style>
    <style name="AlertDialog.ButtonPos" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="AlertDialog.ButtonNeg" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/generalText</item>
    </style>

    <!-- Help Dialog Theme -->
    <style name="HelpDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:background">@color/separation_game_card</item>
        <item name="colorSurface">@color/separation_game_card</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.ButtonHelpRed</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AlertDialog.ButtonHelpRed" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/red</item>
    </style>
</resources>